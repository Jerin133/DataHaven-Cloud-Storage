# Server Configuration
PORT=8080
NODE_ENV=development

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/drive
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Secrets
JWT_SECRET=super-long-random-secret-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_SECRET=another-long-random-secret-key-change-in-production
REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Storage
SUPABASE_STORAGE_BUCKET=drive
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=image/*,application/pdf,text/*,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=100

# Trash Retention (days)
TRASH_RETENTION_DAYS=30
